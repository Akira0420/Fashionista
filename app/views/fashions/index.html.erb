<div class="fashions-container">
  <h3>Coordination</h3>
  <% @fashions.each do |t| %>
    <div class="fashion">
      <div class="card" style="width: 50%; height: 50%">
      <%= image_tag t.image_url, :size=>'120Ã—180', class: "bd-placeholder-img card-img-top" if t.image? %>
        <div class="card-body">
          <p class="card-text"><%= t.body %></p>
          <%= link_to "Detail", fashion_path(t.id), class: "btn btn-outline-danger" %>
          <%= link_to "Edit", edit_fashion_path(t.id), class: "btn btn-outline-danger" %>
          <%= link_to "Delete", fashion_path(t.id), class: "btn btn-outline-danger", method: :delete %>
        </div>
      </div>
        <p class="time"><%= t.created_at.to_s(:datetime_jp) %></p>
    </div> 
  <% end %>
</div>